{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "React application using PokeAPI and GraphQL",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js --ignore client",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "develop": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AMore080/Pokedex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AMore080/Pokedex/issues"
  },
  "homepage": "https://amore080.github.io/Pokedex/",
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "gh-pages": "^5.0.0"
  }
}
